{
    "manifest_version": 3, 
    "name": "Auto Form Filler",
    "version": "1.0",
    "description": "Allows user to add or edit fields and save data locally",
    "permissions": ["storage","activeTab", "scripting","downloads"],
    "host_permissions":["*://*.linkedin.com/*"],
    "action": 
    {
        "default_popup": "popup.html",
        "default_icon":
        {
            "16": "icon/FormIcon.png",
            "48": "icon/FormIcon.png",
            "128": "icon/FormIcon.png"

        }
    },

    "content_scripts":
    [
        {
            "matches":["*://*.linkedin.com/*"],
            "js":["content.js"]
        }
    ],
    "web_accessible_resources":
    [
        {
            "resources":["icon/*.png"],
            "matches":["*//*/*"]
        }
    ]

}